@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<h1>Deployment Slots and Sticky Settings</h1>
<br />
<div class="container">
    <table border="1">
        <tbody>
            <tr>
                <td>Crash Rate</td>
                <td>@ViewBag.crashRate</td>
            </tr>
            <tr>
                <td>Connection String</td>
                <td>@ViewBag.databaseConnectionString</td>
            </tr>
            <tr>
                <td>Slot Non Sticky Setting</td>
                <td>@ViewBag.noneStickSetting</td>
            </tr>
            <tr>
                <td>Slot Sticky Setting</td>
                <td>@ViewBag.stickSetting</td>
            </tr>
        </tbody>
    </table>
<br />
    <div>Random crash value = @ViewBag.realCrashRate  |  @Html.ActionLink("Try crash my app", "crashapp", "StagingSlots", null, null)  |  @Html.ActionLink("Increase chance of crash", "crashapp", "StagingSlots", new {crashrate = 0.6 },null)</div>
    <div>version 0.3.3</div>
</div>
<br />
